{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Launch Application",
      "request": "launch",
      "mainClass": "com.github.throyer.example.Application",
      "projectName": "api"
    },
    {
      "type": "java",
      "name": "Debug (Attach Docker)",
      "projectName": "Vendas",
      "request": "attach",
      "hostName": "127.0.0.1",
      "port": 8001
    },
    {
      "type": "java",
      "name": "Debug (local)",
      "request": "launch",
      "mainClass": "com.github.throyer.common.springboot.Application",
      "cwd": "${workspaceFolder}/api"
    }
  ]
}